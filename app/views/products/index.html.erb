<div class="jumbotron">
  <h1>The laptops<br> from second hand</h1>
  <h2>Buy laptop in your price</h2>
</div>

<div class="center">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <div class="thumbnail">
          
          <div class="caption">
            <h3><%= product.name %></h3>
            <p><%= number_to_currency(product.price) %></p>
            <p><%= "Sold by: #{product.user.name}"  %></p>
            <br>
        
            <%= link_to 'Show', product %>
            <% if (user_signed_in?) && (current_user == product.user)  %>
              <%= link_to 'Edit', edit_product_path(product) %>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br>
<% if user_signed_in?  %>
  <%= link_to 'New Product', new_product_path %>
<% end %>

